<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steven.fzxyactivity.module.newactivity.NewActivityActivity">
    <include
        android:id="@+id/include_toolbar"
        layout="@layout/include_toolbar"
        />
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_below="@+id/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg2"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pic"
        android:layout_marginLeft="@dimen/space_8dp"
        android:layout_marginRight="@dimen/space_8dp"
        >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_title"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="活动标题"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_desc"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="详情"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_tag"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="活动标签"
            />
        <TextView
            android:id="@+id/cityLabel"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="请选择您所在的学校:" />
        <Spinner
            android:id="@+id/sp_school"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/school"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="确认提交"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            />
    </LinearLayout>
</RelativeLayout>
