<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steven.fzxyactivity.module.main.View.Fragment.MessageFrament">
    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_above="@+id/include_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <com.example.steven.fzxyactivity.common.util.customview.XHLoadingView
        android:id="@+id/lv_loading"
        android:layout_below="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_centerInParent="true">
    </com.example.steven.fzxyactivity.common.util.customview.XHLoadingView>
    <com.example.steven.fzxyactivity.common.util.customview.QQListview
        android:id="@+id/listview_qq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_message"
        />
</RelativeLayout>
